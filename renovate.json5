{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    "group:allNonMajor",
    "customManagers:dockerfileVersions",
    ":separateMajorReleases"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//build\\.yaml$/"
      ],
      "matchStrings": [
        "(?<depName>\\S+):(?<currentValue>\\S+)\\n"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    // Repology dependencies
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//config\\.yaml$/",
        "//Dockerfile$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>.*?))?\\r?\\nversion:\\s+(?<currentValue>[\\d.]+)",
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)( versioning=(?<versioning>.*?))?\\r?\\nENV .*?_VERSION=\"?(?<currentValue>\\S+)\"?"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    // Repo version in Repology
    {
      "customType": "regex",
      "managerFilePatterns": [
        "//config\\.yaml$/",
        "//Dockerfile$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(\\S+) depName=(?<depName>[^_]+)_(?<currentValue>[\\d_]+)/"
      ],
      "currentValueTemplate": "{{{replace '_' '.' currentValue}}}",
      "datasourceTemplate": "endoflife-date"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "{{{replace '^.*/' '' packageName}}}"
      ]
    }
  ]
}
